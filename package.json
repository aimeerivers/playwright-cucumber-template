{
  "name": "playwright-cucumber-template",
  "version": "3.1.4",
  "description": "Getting started with TypeScript, Playwright and Cucumber",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "cucumber": "HEADLESS=true cucumber-js",
    "cucumber:report": "open reports/cucumber-report.html",
    "cucumber:wip": "HEADLESS=false cucumber-js --profile wip",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "package:lint": "npx npm-package-json-lint .",
    "playwright:install": "npx playwright install",
    "playwright:install:chromium": "npx playwright install chromium"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.1.1",
    "@cucumber/pretty-formatter": "1.0.1",
    "@faker-js/faker": "9.3.0",
    "@types/node": "22.10.2",
    "eslint-config-plus-prettier": "4.1.4",
    "playwright": "1.49.1",
    "ts-node-maintained": "10.9.4",
    "typescript": "5.7.2"
  },
  "prettier": "eslint-config-plus-prettier/prettier"
}
