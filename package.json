{
  "name": "playwright-cucumber-template",
  "version": "2.0.0",
  "description": "Getting started with TypeScript, Playwright and Cucumber",
  "main": "index.js",
  "scripts": {
    "playwright:install": "npx playwright install",
    "playwright:install:chromium": "npx playwright install chromium",
    "lint": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "cucumber": "HEADLESS=true cucumber-js cucumber --tags 'not @wip' --parallel 5",
    "cucumber:wip": "HEADLESS=false cucumber-js cucumber --tags @wip"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@faker-js/faker": "^8.3.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "eslint-config-plus-prettier": "^1.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "prettier": "eslint-config-plus-prettier/.prettierrc.json"
}
