{
  "name": "playwright-cucumber-template",
  "version": "2.1.22",
  "description": "Getting started with TypeScript, Playwright and Cucumber",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "cucumber": "HEADLESS=true cucumber-js cucumber",
    "cucumber:wip": "HEADLESS=false cucumber-js cucumber --profile wip",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "package:lint": "npx npm-package-json-lint .",
    "playwright:install": "npx playwright install",
    "playwright:install:chromium": "npx playwright install chromium"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.0.1",
    "@cucumber/pretty-formatter": "1.0.1",
    "@faker-js/faker": "9.1.0",
    "@types/node": "22.8.4",
    "eslint-config-plus-prettier": "1.5.17",
    "npm-package-json-lint": "8.0.0",
    "playwright": "1.48.2",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  },
  "prettier": "eslint-config-plus-prettier/.prettierrc.json"
}
